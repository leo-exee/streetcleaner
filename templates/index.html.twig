{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">

        <div class="first-third">
            {% for item in items|slice(0,3) %}
                <div class="item">
                    <div class="center">
                        <h2>
                            <a href="{{ path('app_address_detail', {'address' : item.adress}) }}">{{ item.adress }}</a>
                        </h2>
                    </div>
                    <div class="index">
                        <span>
                            {{ loop.index }}
                        </span>
                    </div>
                    <div class="value">
                        <span>{{ item.temperature }}°C</span>
                        |
                        <span>{{ item.humidity }}% d'humidité</span>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="list">
            <div class="item-header">
                <div>
                    <p>N°</p>
                </div>
                <div class="center">
                    <p>Adresse</p>
                </div>
                <div class="center">
                    <p>Température</p>
                </div>
                <div class="end">
                    <p>Humidité</p>
                </div>
            </div>
            {% for item in items %}
                {% if loop.index > 3 %}
                    <div class="item">
                        <div>
                    <span>
                        {{ loop.index }}
                    </span>
                        </div>
                        <div class="center">
                            <a href="{{ path('app_address_detail', {'address' : item.adress}) }}">{{ item.adress }}</a>
                        </div>
                        <div class="center">
                            <span>{{ item.temperature }}°C</span>
                        </div>
                        <div class="end">
                            <span>{{ item.humidity }}%</span>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}