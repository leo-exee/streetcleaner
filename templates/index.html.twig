{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="item-header">
            <div>
                <p>N°</p>
            </div>
            <div class="center">
                <p>Adresse</p>
            </div>
            <div class="center">
                <p>Température</p>
            </div>
            <div class="end">
                <p>Humidité</p>
            </div>
        </div>
        {% for item in items %}
            <div class="item">
                <div>
                    <span>
                        {{ loop.index }}
                    </span>
                </div>
                <div class="center">
                    <a href="#">{{ item.adress }}</a>
                </div>
                <div class="center">
                    <span>{{ item.temperature }}°C</span>
                </div>
                <div class="end">
                    <span>{{ item.humidity }}%</span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}