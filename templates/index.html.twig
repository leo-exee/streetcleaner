{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Atmos Road{% endblock %}

{% block body %}
    <div class="container">

        <div class="first-third">
            {% for item in items|slice(0,3) %}
                <div class="item-position">
                    <div class="center">
                        <h2>
                            <a href="{{ path('app_address_detail', {'address' : item.adress}) }}">{{ item.adress }} <i class="fa-solid fa-magnifying-glass"></i></a>
                        </h2>
                    </div>
                    <div class="item">
                        <div class="index">
                        <span>
                            {{ loop.index }}
                        </span>
                        </div>
                        <div class="value">
                            <span>{{ item.temperature }}°C</span>
                            &nbsp;&&nbsp;
                            <span>{{ item.humidity }} %</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="list" style="margin-bottom: 80px">

            <div class="item header">

                <div>
                </div>
                <div class="alt">
                    <p>Adresse</p>
                </div>
                <div>
                    <p>Temp.</p>
                </div>
                <div>
                    <p>Hum.</p>
                </div>

            </div>
            {% for item in items %}
                {% if loop.index > 3 %}
                    <div class="item">
                        <div class="index">
                            <span>
                                {{ loop.index }}
                            </span>
                        </div>
                        <div class="address">
                            <a href="{{ path('app_address_detail', {'address' : item.adress}) }}">{{ item.adress }} <i class="fa-solid fa-magnifying-glass"></i></a>
                        </div>
                        <div class="values" >
                            <span class="primary-no-hover">{{ item.temperature }}°C</span>
                        </div>
                        <div class="values" >
                            <span class="primary-no-hover">{{ item.humidity }} %</span>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}