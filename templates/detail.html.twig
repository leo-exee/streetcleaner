{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ name }}{% endblock %}

{% block body %}
    <div class="container">

        <h1>{{ name }}</h1>
        <h2>Température : {{ temp }} °C</h2>
        <h2>Humidité : {{ hum }} %</h2>

        <div class="list rank">

            <div class="item-header">

                <div>
                    <p>#</p>
                </div>
                <div>
                </div>
                <div class="center">
                    <p>Valeurs</p>
                </div>
            </div>
            {% for item in items %}
                <div class="item">
                    <div>
                            <span>
                                {{ loop.index }}
                            </span>
                    </div>
                    <div class="address">
                    </div>
                    <div >
                        <span>{{ item.temperature }}°C</span>
                    </div>
                    <div>
                        <span>{{ item.humidity }} %</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}