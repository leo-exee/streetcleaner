<form method="post" action="{{ path('app_device_delete', {'id': device.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ device.id) }}">
    <button class="btn-icon danger"><i class="fa-solid fa-trash-can"></i></button>
</form>
