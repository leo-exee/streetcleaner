{% extends 'base.html.twig' %}

{% block title %}Device index{% endblock %}

{% block body %}
    <h1>Device index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Device</th>
                <th>Adress</th>
                <th>Temperature</th>
                <th>Humidity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for device in devices %}
            <tr>
                <td>{{ device.id }}</td>
                <td>{{ device.device }}</td>
                <td>{{ device.adress }}</td>
                <td>{{ device.temperature }}</td>
                <td>{{ device.humidity }}</td>
                <td>
                    <a href="{{ path('app_device_show', {'id': device.id}) }}">show</a>
                    <a href="{{ path('app_device_edit', {'id': device.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_device_new') }}">Create new</a>
{% endblock %}
